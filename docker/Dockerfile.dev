# Development environment with GUI dependencies
FROM golang:1.24-bookworm

ENV DEBIAN_FRONTEND=noninteractive

# Install GUI and system dependencies for systray and development
RUN apt-get update && apt-get -y dist-upgrade && apt-get install -y --no-install-recommends \
    libayatana-appindicator3-dev \
    libgtk-3-dev \
    libglib2.0-dev \
    pkg-config \
    cmake \
    build-essential \
    alsa-utils \
    xsel \
    xdotool \
    ydotool \
    wl-clipboard \
    ffmpeg \
    git \
    curl \
    ca-certificates \
    # Vulkan runtime library (SDK installed separately for glslc + headers)
    libvulkan-dev \
    && rm -rf /var/lib/apt/lists/*

# Install Vulkan SDK (glslc + headers) - required for whisper.cpp Vulkan backend
ENV VULKAN_SDK_VERSION=1.3.290.0
RUN curl -fsSL "https://sdk.lunarg.com/sdk/download/${VULKAN_SDK_VERSION}/linux/vulkansdk-linux-x86_64-${VULKAN_SDK_VERSION}.tar.xz" -o /tmp/vulkan-sdk.tar.xz \
    && mkdir -p /opt/vulkan-sdk \
    && tar -xJf /tmp/vulkan-sdk.tar.xz -C /opt/vulkan-sdk --strip-components=1 \
    && cp /opt/vulkan-sdk/x86_64/bin/glslc /usr/local/bin/ \
    && cp -r /opt/vulkan-sdk/x86_64/include/vulkan /usr/include/ \
    && cp -r /opt/vulkan-sdk/x86_64/include/vk_video /usr/include/ \
    && rm -rf /tmp/vulkan-sdk.tar.xz /opt/vulkan-sdk

# Install golangci-lint
RUN curl -sSfL https://raw.githubusercontent.com/golangci/golangci-lint/master/install.sh \
    | sh -s -- -b /usr/local/bin v2.6.1

# Install gosec
RUN go install github.com/securego/gosec/v2/cmd/gosec@v2.22.11

# Set working directory
WORKDIR /app

# Cache Go deps
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose common ports for development
EXPOSE 8080 9090

# Default command for development
CMD ["bash"]