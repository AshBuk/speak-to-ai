# Development environment with GUI dependencies
FROM golang:1.24-bookworm

ENV DEBIAN_FRONTEND=noninteractive

# Install GUI and system dependencies for systray and development
RUN apt-get update && apt-get -y dist-upgrade && apt-get install -y --no-install-recommends \
    libayatana-appindicator3-dev \
    libgtk-3-dev \
    libglib2.0-dev \
    pkg-config \
    cmake \
    build-essential \
    alsa-utils \
    xsel \
    xdotool \
    ydotool \
    wl-clipboard \
    ffmpeg \
    git \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install golangci-lint
RUN curl -sSfL https://raw.githubusercontent.com/golangci/golangci-lint/master/install.sh \
    | sh -s -- -b /usr/local/bin v2.4.0

# Set working directory
WORKDIR /app

# Cache Go deps
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose common ports for development
EXPOSE 8080 9090

# Default command for development
CMD ["bash"]